    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI test app",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/webhook",
            "envFile": "${workspaceFolder}/webhook/.env",
            "args": [
                "test_app:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "7001",
            ],
            "jinja": true
        },
        {
            "name": "Attach to Python Functions",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 9091
            },
            "preLaunchTask": "func: host start"
        }
    ]
}